<% if (typeof pjax === "undefined") { %>
    <%- include header %>
<% } else { %>
    <title><%= title %></title>
<% } %>

    <div class="page-header">
        <h1 class="page-title"><%= title %></h1>
        <ol class="breadcrumb">
        </ol>
    </div>

    <div class="page-content">
            <!-- 目前症状/自觉症状 -->
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-bordered" >
                        <div class="panel-heading">
                            <h3 class="panel-title">目前症状</h3>
                        </div>
                        <div class="panel-body">
                            <div class="form-group form-material col-xs-12 col-md-11 offset-md-1">
                                <label>自觉症状*:</label>
                                <div>
                                    <div class="checkbox-custom checkbox-primary checkbox-inline">
                                        <input type="checkbox" id="symptom_select1" name="symptom_select1" value="头痛头晕">
                                        <label for="symptom_select1">头痛头晕</label>
                                    </div>
                                    <div class="checkbox-custom checkbox-primary checkbox-inline">
                                        <input type="checkbox" id="symptom_select2" name="symptom_select2" value="心悸胸闷">
                                        <label for="symptom_select2">心悸胸闷</label>
                                    </div>
                                    <div class="checkbox-custom checkbox-primary checkbox-inline">
                                        <input type="checkbox" id="symptom_select3" name="symptom_select3" value="呼吸困难">
                                        <label for="symptom_select3">呼吸困难</label>
                                    </div>
                                    <div class="checkbox-custom checkbox-primary checkbox-inline">
                                        <input type="checkbox" id="symptom_select4" name="symptom_select4" value="多饮">
