<script>
    var searching = false;

    var doSearch = function(dom) {
        if (dom.value.length="18" && checkIdCard(dom.value) && !searching) {
            searching = true;
            doAjax("http://192.168.1.229:3000/api/v1/patient/get_by_id_number", "get", {"id_number": dom.value}, function(data, status) {
                searching = false;
                if (status && data) {
                    $("#sex" + ({"男": "1", "女": "2"})[data["sex"]]).prop("checked", true);
                    $("#name").val(data["name"]);
                    $("#nation").val(data["phone"]);
                    $("#submitResult").prop("disabled",false);
                } else {
                    $("input:radio[id^='sex']").prop("checked", false);
                    $("#name").val("");
                    $("#nation").val("");
                }
            });
        } else {
            $("input:radio[id^='sex']").prop("checked", false);
            $("#name").val("");
            $("#nation").val("");
        }
    };

    var submitForm = function() {
        var max_BloodPressure = $("#max_BloodPressure").val();
        var min_BloodPressure = $("#min_BloodPressure").val();
        if(!max_BloodPressure || !min_BloodPressure) {
            swal("请填入数据","","error");
            return false;
        }
        swal({
            title: "确认提交",
            text: "请核对提交数据：\n收缩压：" + $("#max_BloodPressure").val() + "\n舒张压：" + $("#min_BloodPressure").val(),
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "提交",
            cancelButtonText: "取消",
            closeOnConfirm: false,
            closeOnCancel: true,
            showLoaderOnConfirm: true
        },
        function(isConfirm) {
            if (isConfirm) {
                doAjax("http://192.168.1.229:3000/api/v1/examination_input/blood_pressure", "post",
                    {"id_number": $("#id_number").val(), "max_BloodPressure": $("#max_BloodPressure").val(), "min_BloodPressure": $("#min_BloodPressure").val()},
                    function(data, status) {
                        if (status && data) {

                            swal({
                                title: data.info || "提交成功",
                                type: "success"
                            },
                            function() {
                                $("input:radio[id^='sex']").prop("checked", false);
                                $("input").val("");
                            });
                        } else {
                            swal("提交失败", "", "error");
                        }
                    }
                );
            }
        });
    };
</script>
