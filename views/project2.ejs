    var searching = false;
    var template = $("#showProject").html()
    var doSearch = function (dom){
        if (dom.value.length="18" && checkIdCard(dom.value) && !searching){
            searching = true;
            doAjax("http://192.168.1.229:3000/api/v1/patient/get_by_id_number","get",{"id_number": dom.value},function(data, status){
                searching = false;
                if (status && data){
                    $("#showProject").html(template);
                    $("#name").text(data.name);
                    $("#nation").text(data.nation);
                    $("#sex").text(data.sex);
                    $("#phone").text(data.phone);
                    $("#address").text(data.address);
                    $("#birthday").text(data.birthday);
                    $("#marriage").text(data.marriage);
                    $("#showProject").show();
                }else{
                    $("#showProject").html("暂无搜索结果");
                }
            });
        } else {
            $("#showProject").html("暂无搜索结果");
        }
    };

</script>
