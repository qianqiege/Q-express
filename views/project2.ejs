                 <label for="health_survey4_1">费别</label>
                 <select id="health_survey4_1" class="form-control"  data-plugin="select2" name="health_survey4">
                   <optgroup label="">
                   <option>公费</option>
                   <option>自费</option>
                   <option>医保 </option>
                   <option>其它</option>
                   </optgroup>
                 </select>
               </div>
              </div>
              <div class="row">
                <div class="col-xs-12 col-lg-10 offset-lg-1"><div id="exampleBasic" class="form-group jsgrid" ></div></div>

              </div>
              <div class="row">
                <div class="col-xs-12 col-lg-2 offset-lg-9 ">
                  <button type="button" class="btn  btn-block btn-primary">开方 </button>
                </div>
              </div>
          </div>
          <hr/>
          <div class="row">
            <p class="col-md-4 col-xs-12 offset-lg-1">
              医生：<span>医生1</span>
            </p>
            <p class="col-md-4 col-xs-12 offset-lg-2 ">
              费用：<span>444</span>
            </p>
          </div>
          <div class="row">
            <p class="col-md-4 col-xs-12 offset-lg-1">
