<script>
$(function () {
    doAjax("http://192.168.1.229:3000/api/v1/recipe/recipe_info", "get", {"category": "筑脊科"}, function(data, status) {
        if (status && data) {
            $("#hospital-title").text(data.hospital);
            $("#doctor").text(data.doctor);
            $("#issued_date").text(data.issued_date);
        }
    });
})
var template = $("#hideProject").html();
$("#hideProject").remove();
var searching = false;
var doSearch = function (dom) {
    var val = dom.value.toLocaleUpperCase();
    if (val.length===18 && checkIdCard(val) && !searching) {
        var createUserDom = function (userObj) {
            t_template = template
            return t_template;
        };
        doAjax("http://192.168.1.229:3000/api/v1/registration/get_number","get",{"id_number":val},function (data, status) {
            searching = false;
            if (status && data) {
                $("#showProject").html($(createUserDom(data)));
                $("#health_survey4_1").select2();
                $("#health_survey4_2").select2();
                $("#health_survey4_3").select2();
                $("#grade").select2();
                for (var i in data.patient) {
                    $("#"+ i).text(data.patient[i] || "无");
                }
                $("#recipe_number").text(data.registration.number || "未挂号");
            } else {
                $("#showProject").html("暂无搜索结果");
            }

        });
        doAjax("http://192.168.1.229:3000/api/v1/spine/spine_level", "get", {}, function (data, status){
            if (status && data) {
                for (var i in data) {
                    var j = ~~i+1;
                    $("#optionGroup").append("<option value =" + j +">"+data[i].treatment_level+"</option>");
                }
                $("#grade").trigger("change");
            } else {
                $("#optionGroup").append("暂无等级");
            }
        })
    } else {
        $("#showProject").html("暂无搜索结果");
    }

};
var changeGrade = function () {
    var grade = $("#grade").val();
    doAjax("http://192.168.1.229:3000/api/v1/spine/spine_level_charge", "get" , {"spine_level_id":grade}, function (data, status) {
        console.log(data);
        $("#total").text(0);
        $("#single").text(0);
        $("input[type = checkbox]").each (function () {
            $(this).attr("checked" , false);
            $(this).attr("disabled" , false);
        })
        for (var i in data) {
            for (j in data[i]){
                $("#"+data[i]["treatment_technique"]+"_"+j).val(data[i][j]);
                $("#"+data[i]["treatment_technique"]+"_"+j).next("span").text(data[i][j])
                if (data[i][j] == 0) {
                    $("#"+data[i]["treatment_technique"]+"_"+j).attr("disabled","disabled");
                }
            }
        }
    })

};
var caculate = function () {
    var sum = 0;
    $("input[type = checkbox]:checked").each(function () {
        sum = sum+~~this.value;
    })
    var times = $("#cureTimes").val();
    $("#total").text(sum*times);
    $("#single").text(sum);
}
var submitForm = function () {
    var arr = [];
    $("input[type=checkbox]:checked").each(function(){arr.push($(this)[0].id)})
    console.log(arr);
    console.log($("#cureTimes").val());
    console.log($("#descriptionOfPhysicalCondition").val());
    console.log($("#diagnosticAdvice").val());
    console.log($("#grade").val());
    console.log($("#total").text());
};
</script>
