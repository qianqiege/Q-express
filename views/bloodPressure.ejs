<%- include header %>
<div class="page">
    <div class="page-header">
        <h1 class="page-title"><%= title %></h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="../index.html">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">Forms</a></li>
            <li class="breadcrumb-item active">Wizard</li>
        </ol>
    </div>
    <div class="page-content container">
        <div class="row">

            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">添加新记录</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12 col-md-5 offset-md-1">
                            <div class="form-group form-material floating" data-plugin="formMaterial">
                                <label class="form-control-label" for="id_number">身份证号</label>
                                <input type="text" class="form-control empty" name="id_number" id="id_number" oninput="doSearch(this);" maxlength="18">
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-5">
                            <div class="form-group form-material">
                                <label class="form-control-label" for="sex">性别</label>
                                <div style="margin-top: 12px;">
                                    <div class="radio-custom radio-primary radio-inline">
                                        <input type="radio" id="sex1" name="sex" disabled="disabled">
                                        <label for="sex1">男</label>
                                    </div>
                                    <div class="radio-custom radio-primary radio-inline">
                                        <input type="radio" id="sex2" name="sex" disabled="disabled">
                                        <label for="sex2">女</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-5 offset-md-1">
                            <div class="form-group form-material floating" data-plugin="formMaterial">
                                <label class="form-control-label" for="name">姓名</label>
                                <input type="text" class="form-control empty" name="name" id="name" disabled="disabled">
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-5">
                            <div class="form-group form-material floating" data-plugin="formMaterial">
                                <label class="form-control-label" for="nation">手机号码</label>
                                <input type="text" class="form-control empty" name="nation" id="nation" disabled="disabled">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body container-fluid">
                    <form>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group form-material">
                                    <label class="form-control-label" for="min_pressure">舒张压</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="min_pressure" name="min_BloodPressure">
                                        <span class="input-group-addon">毫米汞柱</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group form-material">
                                    <label class="form-control-label" for="max_pressure">收缩压</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="max_pressure" name="max_BloodPressure">
                                        <span class="input-group-addon">毫米汞柱</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-12">
                                <button type="submit" class="btn btn-block btn-success">提交</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    var searching = false;

    var doSearch = function(dom) {
        if (dom.value.length="18" && checkIdCard(dom.value) && !searching) {
            searching = true;
            doAjax("http://192.168.1.229:3000/api/v1/patient/get_by_id_number", "get", {"id_number": dom.value}, function(data, status) {
                searching = false;
                if (status && data) {
                    $("#sex" + ({"男": "1", "女": "2"})[data["sex"]]).prop("checked", true);
                    $("#name").val(data["name"]);
                    $("#nation").val(data["phone"]);
                } else {
                    $("input:radio[id^='sex']").prop("checked", false);
                    $("#name").val("");
                    $("#nation").val("");
                }
            });
        } else {
            $("input:radio[id^='sex']").prop("checked", false);
            $("#name").val("");
            $("#nation").val("");
        }
    };
</script>
