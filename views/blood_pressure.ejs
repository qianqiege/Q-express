			<div class="panel-heading">
			  <h3 class="panel-title">数据图表</h3>
			</div>
			<div class="panel-body container-fluid">      
				<div id="chart"></div>
				<script>
				///Demo Data
				<% needjquery="<script>jQuery(document).ready(function() {var chart = c3.generate({bindto: '#chart',data: {x: 'x',columns: [['x', '2016-11-11', '2016-11-12', '2016-11-13', '2016-11-14', '2016-11-15', '2016-11-16'],['收缩压', 30, 200, 100, 400, 150, 250],['舒张压', 50, 20, 10, 40, 15, 25]]},axis: {x: {show: true,type: 'category',},y: {tick: {format: function (d) { return  d+' 毫米汞柱'; }}}}});})</script>"
